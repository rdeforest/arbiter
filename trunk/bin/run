#!/usr/bin/perl

use strict;
use warnings;

use FindBin;
use lib "$FindBin::Bin/../lib";

use Arbiter::Iterator;

=pod

Iterates a world...

=cut

use Getopt::Long;

# TODO: GetOptions(...)

my $world_dir = shift;

my $world = new Arbiter::Iterator(dir => $world_dir);

my $iterations = 1;

while ($iterations) {
    $world->iterate;
    $iterations--;
}

